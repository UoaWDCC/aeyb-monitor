{
    "extends": "../tsconfig.base.json",

    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx"
    },
    "include": ["src", "vite.config.ts"],
    "references": [{ "path": "../shared" }]
}
